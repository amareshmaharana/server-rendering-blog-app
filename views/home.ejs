<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>BlogNode - Home</title>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container mt-5">
      <div class="row row-cols-4 g-2">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card" style="width: 18rem">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <!-- <p class="card-text">
            <%= blog.body %>
          </p> -->
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-3">Read</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
