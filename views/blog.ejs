<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title><%= blog.title %></title>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <!-- <p class="text-muted">By <%= blog.author %> on <%= blog.createdAt.toDateString() %></p> -->
      <img
        src="<%= blog.coverImageURL %>"
        class="img-fluid mb-4 mt-3"
        alt="Cover Image"
        width="700"
        height="400"
      />
      <pre class="mt-3">
        <%= blog.body %>
      </pre>
    </div>

    <div class="container mt-4">
      <img
        src="<%= blog.createdBy.profileImgURL %>"
        alt="profile picture"
        class="rounded-circle"
        width="60"
        height="60"
      />
      &nbsp; <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-5">
      <h3 class="">Comments (<%= comments.length %>)</h3>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="POST">
        <div class="mb-2 mt-4">
          <textarea
            name="content"
            class="form-control"
            placeholder="Add a comment..."
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-4 mb-4">Send</button>
      </form>

      <% } %>
      
      <div class="mt-4">
        <% comments.forEach(comment => { %>
        <div>
          <img
            src="<%= comment.createdBy.profileImgURL %>"
            alt="profile picture"
            class="rounded-circle"
            width="40"
            height="40"
          />
          &nbsp; <%= comment.createdBy.fullName %>

          <pre class="mt-2"><%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
